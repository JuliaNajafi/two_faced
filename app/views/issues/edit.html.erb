<h3> Edit Issue </h3>

<%= form_for @issue do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :image_url %>
  <%= f.text_field :img_url %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit %>
<% end %>

<%= form_for @issue, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
